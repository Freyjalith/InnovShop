{% block admin_content %}{% endblock %}

<!-- Bouton flottant de retour au dashboard -->
<div class="position-fixed bottom-0 end-0 p-3" style="z-index: 1050;">
    <a href="{{ path('admin') }}" class="btn btn-primary btn-lg rounded-circle shadow" 
       title="Retour au Dashboard" data-bs-toggle="tooltip">
        <i class="fas fa-home"></i>
    </a>
</div>

<style>
.breadcrumb {
    background-color: #f8f9fa;
    border-radius: 0.375rem;
    padding: 0.75rem 1rem;
}

.breadcrumb-item + .breadcrumb-item::before {
    content: ">";
    color: #6c757d;
}

.navbar-dark .navbar-nav .nav-link:hover {
    color: #fff;
    background-color: rgba(255,255,255,0.1);
    border-radius: 0.25rem;
}

.btn-lg.rounded-circle {
    width: 60px;
    height: 60px;
    display: flex;
    align-items: center;
    justify-content: center;
}

.dropdown-menu {
    border: none;
    box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15);
}
</style>

<script>
// Initialiser les tooltips
document.addEventListener('DOMContentLoaded', function() {
    var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
    var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
        return new bootstrap.Tooltip(tooltipTriggerEl);
    });
    
    // Raccourcis clavier
    document.addEventListener('keydown', function(e) {
        // Alt + D = Dashboard
        if (e.altKey && e.key === 'd') {
            e.preventDefault();
            window.location.href = '{{ path('admin') }}';
        }
        // Alt + C = Commandes
        if (e.altKey && e.key === 'c') {
            e.preventDefault();
            window.location.href = '{{ path('admin_orders') }}';
        }
        // Alt + P = Produits
        if (e.altKey && e.key === 'p') {
            e.preventDefault();
            window.location.href = '{{ ea_url().setController('App\\Controller\\Admin\\ProductCrudController').setAction('index') }}';
        }
        // Alt + S = Voir le site
        if (e.altKey && e.key === 's') {
            e.preventDefault();
            window.open('{{ path('home') }}', '_blank');
        }
    });
});
</script>

<!-- Aide pour les raccourcis -->
<div class="position-fixed bottom-0 start-0 p-3" style="z-index: 1040;">
    <button class="btn btn-outline-secondary btn-sm" type="button" data-bs-toggle="collapse" 
            data-bs-target="#shortcutsHelp" title="Raccourcis clavier">
        <i class="fas fa-keyboard"></i>
    </button>
    <div class="collapse mt-2" id="shortcutsHelp">
        <div class="card card-body bg-dark text-white" style="font-size: 0.8rem;">
            <strong>Raccourcis :</strong><br>
            <kbd>Alt + D</kbd> Dashboard<br>
            <kbd>Alt + C</kbd> Commandes<br>
            <kbd>Alt + P</kbd> Produits<br>
            <kbd>Alt + S</kbd> Voir le site
        </div>
    </div>
</div>
