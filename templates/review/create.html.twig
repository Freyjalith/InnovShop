{% extends 'base.html.twig' %}

{% block title %}Laisser un avis - {{ product.name }}{% endblock %}

{% block body %}
<div class="container my-5">
    <div class="row">
        <div class="col-lg-8 mx-auto">
            <div class="card">
                <div class="card-header">
                    <h4 class="mb-0"><i class="bi bi-star me-2"></i>{{ existingReview ? 'Modifier votre avis' : 'Laisser un avis' }}</h4>
                </div>
                <div class="card-body">
                    <div class="row mb-4">
                        <div class="col-md-3">
                            {% if product.primaryImage %}
                                <img src="{{ asset('uploads/product/' ~ product.primaryImage.filename) }}" 
                                     class="img-fluid rounded" alt="{{ product.name }}">
                            {% endif %}
                        </div>
                        <div class="col-md-9">
                            <h5>{{ product.name }}</h5>
                            <p class="text-muted">Commande {{ order.orderNumber }}</p>
                            <p class="text-muted">Livrée le {{ order.shippedAt ? order.shippedAt|date('d/m/Y') : 'Date inconnue' }}</p>
                        </div>
                    </div>

                    <form method="post">
                        <div class="mb-4">
                            <label class="form-label">Note <span class="text-danger">*</span></label>
                            <div class="rating-input">
                                {% for i in 5..1 %}
                                    <input type="radio" name="rating" value="{{ i }}" id="star{{ i }}" 
                                           {{ existingReview and existingReview.rating == i ? 'checked' : '' }} required>
                                    <label for="star{{ i }}" class="star-label">
                                        <i class="bi bi-star-fill"></i>
                                    </label>
                                {% endfor %}
                            </div>
                        </div>

                        <div class="mb-4">
                            <label for="comment" class="form-label">Votre avis <span class="text-danger">*</span></label>
                            <textarea name="comment" id="comment" class="form-control" rows="5" 
                                      placeholder="Partagez votre expérience avec ce produit..." required>{{ existingReview ? existingReview.comment : '' }}</textarea>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a href="{{ path('app_orders') }}" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left me-2"></i>Retour
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-send me-2"></i>{{ existingReview ? 'Modifier l\'avis' : 'Publier l\'avis' }}
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
.rating-input {
    display: flex;
    flex-direction: row-reverse;
    justify-content: flex-end;
}

.rating-input input[type="radio"] {
    display: none;
}

.star-label {
    color: #ddd;
    font-size: 1.5rem;
    cursor: pointer;
    transition: color 0.2s;
    margin-left: 5px;
    order: 2;
}

.rating-input input[type="radio"]:checked,
.rating-input input[type="radio"]:checked ~ input[type="radio"] {
    & + .star-label {
        color: #ffc107;
    }
}

.star-label:hover,
.star-label:hover ~ .star-label {
    color: #ffc107 !important;
}

/* Affichage correct des étoiles sélectionnées */
.rating-input input[type="radio"]:checked + .star-label {
    color: #ffc107;
}

.rating-input input[type="radio"]:checked + .star-label ~ .star-label {
    color: #ffc107;
}
</style>

<script>
document.addEventListener('DOMContentLoaded', function() {
    const stars = document.querySelectorAll('.star-label');
    const inputs = document.querySelectorAll('input[name="rating"]');
    
    // Fonction pour mettre à jour l'affichage des étoiles
    function updateStars(rating) {
        stars.forEach((star, index) => {
            const starValue = 5 - index;
            if (starValue <= rating) {
                star.style.color = '#ffc107';
            } else {
                star.style.color = '#ddd';
            }
        });
    }
    
    // Initialiser l'affichage si un avis existe déjà
    const checkedInput = document.querySelector('input[name="rating"]:checked');
    if (checkedInput) {
        updateStars(parseInt(checkedInput.value));
    }
    
    // Gestion du hover
    stars.forEach((star, index) => {
        star.addEventListener('mouseenter', function() {
            const rating = 5 - index;
            updateStars(rating);
        });
        
        star.addEventListener('click', function() {
            const rating = 5 - index;
            inputs[index].checked = true;
            updateStars(rating);
        });
    });
    
    // Restaurer l'affichage au mouseout
    document.querySelector('.rating-input').addEventListener('mouseleave', function() {
        const checkedInput = document.querySelector('input[name="rating"]:checked');
        if (checkedInput) {
            updateStars(parseInt(checkedInput.value));
        } else {
            updateStars(0);
        }
    });
});
</script>
{% endblock %}