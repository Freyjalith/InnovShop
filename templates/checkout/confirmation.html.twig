{% extends 'base.html.twig' %}

{% block title %}Commande confirmée - InnovShop{% endblock %}

{% block body %}
<div class="container my-5">
    <div class="text-center mb-5">
        <div class="mb-4">
            <i class="bi bi-check-circle-fill text-success" style="font-size: 4rem;"></i>
        </div>
        <h1 class="text-success">Commande confirmée !</h1>
        <p class="lead">Merci pour votre commande. Voici les détails :</p>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h5>Commande #{{ order.orderNumber }}</h5>
                    <small class="text-muted">Passée le {{ order.createdAt|date('d/m/Y à H:i') }}</small>
                </div>
                <div class="card-body">
                    <div class="row mb-4">
                        <div class="col-md-6">
                            <h6>Informations client</h6>
                            <p>
                                {{ order.customerFirstName }} {{ order.customerLastName }}<br>
                                {{ order.customerEmail }}<br>
                                {{ order.customerPhone }}
                            </p>
                        </div>
                        <div class="col-md-6">
                            <h6>Adresse de livraison</h6>
                            <p>{{ order.shippingAddress|nl2br }}</p>
                        </div>
                    </div>

                    <h6>Articles commandés</h6>
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Produit</th>
                                    <th>Prix unitaire</th>
                                    <th>Quantité</th>
                                    <th>Total</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for item in order.items %}
                                    <tr>
                                        <td>{{ item.product.name }}</td>
                                        <td>{{ item.unitPrice }}€</td>
                                        <td>{{ item.quantity }}</td>
                                        <td>{{ item.totalPrice }}€</td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                            <tfoot>
                                <tr>
                                    <th colspan="3">Total</th>
                                    <th>{{ order.totalAmount }}€</th>
                                </tr>
                            </tfoot>
                        </table>
                    </div>

                    <div class="alert alert-info">
                        <i class="bi bi-info-circle"></i>
                        Vous recevrez un email de confirmation à l'adresse {{ order.customerEmail }}.
                        Votre commande sera traitée dans les plus brefs délais.
                    </div>
                </div>
            </div>

            <div class="text-center mt-4">
                <a href="{{ path('catalogue') }}" class="btn btn-primary">
                    Continuer mes achats
                </a>
            </div>
        </div>
    </div>
</div>
{% endblock %}