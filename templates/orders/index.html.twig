{% extends 'base.html.twig' %}

{% block title %}Mes Commandes - InnovShop{% endblock %}

{% block body %}
<div class="container my-5">
    <div class="row">
        <div class="col-12">
            <div class="d-flex align-items-center mb-4">
                <i class="bi bi-bag-check fs-2 text-primary me-3"></i>
                <h1 class="mb-0">Mes Commandes</h1>
            </div>

            {% if orders is empty %}
                <div class="text-center py-5">
                    <i class="bi bi-bag-x display-1 text-muted mb-3"></i>
                    <h3 class="text-muted">Aucune commande</h3>
                    <p class="text-muted">Vous n'avez pas encore passé de commande.</p>
                    <a href="{{ path('catalogue') }}" class="btn btn-primary">
                        <i class="bi bi-shop me-2"></i>Découvrir nos produits
                    </a>
                </div>
            {% else %}
                <div class="row">
                    {% for order in orders %}
                        <div class="col-12 mb-4">
                            <div class="card">
                                <div class="card-header d-flex justify-content-between align-items-center">
                                    <div>
                                        <h5 class="mb-1">Commande {{ order.orderNumber }}</h5>
                                        <small class="text-muted">{{ order.createdAt|date('d/m/Y à H:i') }}</small>
                                    </div>
                                    <div class="text-end">
                                        {% set statusClass = 'secondary' %}
                                        {% set statusIcon = 'clock' %}
                                        {% set statusText = 'En attente' %}
                                        
                                        {% if order.status == 'confirmed' %}
                                            {% set statusClass = 'info' %}
                                            {% set statusIcon = 'check-circle' %}
                                            {% set statusText = 'Confirmée' %}
                                        {% elseif order.status == 'processing' %}
                                            {% set statusClass = 'warning' %}
                                            {% set statusIcon = 'gear' %}
                                            {% set statusText = 'En préparation' %}
                                        {% elseif order.status == 'shipped' %}
                                            {% set statusClass = 'primary' %}
                                            {% set statusIcon = 'truck' %}
                                            {% set statusText = 'Expédiée' %}
                                        {% elseif order.status == 'delivered' %}
                                            {% set statusClass = 'success' %}
                                            {% set statusIcon = 'check-all' %}
                                            {% set statusText = 'Livrée' %}
                                        {% elseif order.status == 'cancelled' %}
                                            {% set statusClass = 'danger' %}
                                            {% set statusIcon = 'x-circle' %}
                                            {% set statusText = 'Annulée' %}
                                        {% endif %}
                                        
                                        <span class="badge bg-{{ statusClass }} fs-6">
                                            <i class="bi bi-{{ statusIcon }} me-1"></i>{{ statusText }}
                                        </span>
                                    </div>
                                </div>
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-md-8">
                                            <h6 class="text-muted mb-2">Articles commandés :</h6>
                                            <div class="row">
                                                {% for item in order.items %}
                                                    <div class="col-md-6 mb-2">
                                                        <div class="d-flex align-items-center">
                                                            <span class="badge bg-light text-dark me-2">{{ item.quantity }}x</span>
                                                            <span class="text-truncate">{{ item.product.name }}</span>
                                                        </div>
                                                    </div>
                                                {% endfor %}
                                            </div>
                                        </div>
                                        <div class="col-md-4 text-md-end">
                                            <div class="mb-2">
                                                <strong class="fs-5 text-primary">{{ order.totalAmount|number_format(2, ',', ' ') }} €</strong>
                                            </div>
                                            <div class="d-flex flex-column flex-md-row gap-2 justify-content-md-end">
                                                <a href="{{ path('app_order_show', {id: order.id}) }}" class="btn btn-outline-primary btn-sm">
                                                    <i class="bi bi-eye me-1"></i>Détails
                                                </a>
                                                {% if order.status == 'delivered' %}
                                                    <button class="btn btn-outline-success btn-sm" disabled>
                                                        <i class="bi bi-check-circle me-1"></i>Livrée
                                                    </button>
                                                {% endif %}
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}