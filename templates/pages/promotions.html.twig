{% extends 'base.html.twig' %}

{% block title %}Promotions - InnovShop{% endblock %}

{% block body %}
<div class="container my-5">
    <div class="text-center mb-5">
        <h1 class="display-4 mb-3">ðŸ”¥ Promotions</h1>
        <p class="lead text-muted">DÃ©couvrez nos meilleures offres du moment !</p>
    </div>

    {% if products is empty %}
        <div class="text-center py-5">
            <i class="bi bi-tag display-1 text-muted mb-3"></i>
            <h3 class="text-muted">Aucune promotion en cours</h3>
            <p class="text-muted">Revenez bientÃ´t pour dÃ©couvrir nos prochaines offres !</p>
        </div>
    {% else %}
        <div class="row">
            {% for product in products %}
                <div class="col-lg-4 col-md-6 mb-4">
                    <div class="card product-card h-100">
                        {% if product.primaryImage %}
                            <img src="{{ asset('uploads/product/' ~ product.primaryImage.filename) }}" 
                                 class="card-img-top product-image" alt="{{ product.name }}">
                        {% endif %}
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">{{ product.name }}</h5>
                            <p class="card-text flex-grow-1">{{ product.description|slice(0, 100) }}...</p>
                            <div class="mt-auto">
                                <div class="d-flex justify-content-between align-items-center mb-2">
                                    <div>
                                        <span class="badge bg-danger">-{{ product.discountPercentage }}%</span>
                                        <div class="price-container">
                                            <span class="text-decoration-line-through text-muted">{{ product.originalPrice|number_format(2, ',', ' ') }} â‚¬</span>
                                            <span class="price">{{ product.currentPrice|number_format(2, ',', ' ') }} â‚¬</span>
                                        </div>
                                    </div>
                                </div>
                                <div class="d-grid gap-2">
                                    <button class="btn btn-dark" onclick="addToCart({{ product.id }}, this)">
                                        <i class="bi bi-cart-plus me-2"></i>Ajouter au panier
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% endif %}
</div>
{% endblock %}