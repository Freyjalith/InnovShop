{% extends 'base.html.twig' %}

{% block title %}{{ product.name }} - InnovShop{% endblock %}

{% block body %}
<div class="product-page">
<div class="container my-5">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="{{ path('home') }}">Accueil</a></li>
            <li class="breadcrumb-item"><a href="{{ path('catalogue') }}">Catalogue</a></li>
            <li class="breadcrumb-item active">{{ product.name }}</li>
        </ol>
    </nav>

    <div class="row">
        <div class="col-md-6">
            {% if product.images|length > 0 %}
                <div class="card border-0 shadow-sm mb-3">
                    {% set primaryImage = product.getPrimaryImage() %}
                    <img id="mainImage" src="{{ asset('uploads/product/' ~ primaryImage.filename) }}" class="card-img-top" alt="{{ primaryImage.altText }}" style="height: 400px; object-fit: cover;">
                </div>
                {% if product.images|length > 1 %}
                    <div class="row g-2">
                        {% for image in product.images %}
                            <div class="col-3">
                                <img src="{{ asset('uploads/product/' ~ image.filename) }}" 
                                     class="img-thumbnail w-100 thumbnail-image" 
                                     alt="{{ image.altText }}"
                                     style="height: 80px; object-fit: cover; cursor: pointer;"
                                     onclick="changeMainImage('{{ asset('uploads/product/' ~ image.filename) }}', '{{ image.altText }}')">
                            </div>
                        {% endfor %}
                    </div>
                {% endif %}
            {% else %}
                <div class="card border-0 shadow-sm">
                    <img src="https://via.placeholder.com/500x400?text={{ product.name|url_encode }}" class="card-img-top" alt="{{ product.name }}">
                </div>
            {% endif %}
        </div>
        
        <div class="col-md-6">
            <div class="product-details">
                <h1 class="display-5 fw-bold mb-3" style="color: #2c3e50;">{{ product.name }}</h1>
                
                <div class="mb-4">
                    {% if product.hasPromotion() %}
                        <div class="d-flex align-items-center gap-3">
                            <span class="text-decoration-line-through text-muted h4">{{ product.originalPrice }} €</span>
                            <span class="h2 text-danger">{{ product.getCurrentPrice() }} €</span>
                            <span class="badge bg-danger fs-6">-{{ product.discountPercentage }}%</span>
                            <span class="badge bg-light text-dark ms-2">TTC</span>
                        </div>
                    {% else %}
                        <span class="h2 text-success">{{ product.price }} €</span>
                        <span class="badge bg-light text-dark ms-2">TTC</span>
                    {% endif %}
                </div>

                <div class="mb-4">
                    {% if product.stock > 0 %}
                        <span class="badge bg-success fs-6">
                            <i class="bi bi-check-circle"></i> En stock ({{ product.stock }} disponible{{ product.stock > 1 ? 's' : '' }})
                        </span>
                    {% else %}
                        <span class="badge bg-danger fs-6">
                            <i class="bi bi-x-circle"></i> Rupture de stock
                        </span>
                    {% endif %}
                </div>

                <div class="mb-4">
                    <h3>Description</h3>
                    <p class="text-muted">{{ product.description ?: 'Aucune description disponible.' }}</p>
                </div>

                <div class="mb-4">
                    <h4>Options</h4>
                    <div class="row g-3">
                        <div class="col-md-6">
                            <label class="form-label">Quantité</label>
                            <div class="input-group">
                                <button class="btn btn-outline-secondary" type="button" id="decreaseQty">-</button>
                                <input type="number" class="form-control text-center" id="quantity" value="1" min="1" max="{{ product.stock }}">
                                <button class="btn btn-outline-secondary" type="button" id="increaseQty">+</button>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="d-grid gap-2 d-md-flex">
                    {% if product.stock > 0 %}
                        <button class="btn btn-lg flex-fill" style="background-color: #2c3e50; color: white;" id="addToCart" data-product-id="{{ product.id }}">
                            <i class="bi bi-cart-plus"></i> Ajouter au panier
                        </button>
                        <button class="btn btn-outline-secondary btn-lg">
                            <i class="bi bi-heart"></i>
                        </button>
                    {% else %}
                        <button class="btn btn-secondary btn-lg flex-fill" disabled>
                            <i class="bi bi-x-circle"></i> Produit indisponible
                        </button>
                    {% endif %}
                </div>

                <div class="mt-4">
                    <small class="text-muted">
                        <i class="bi bi-truck"></i> Livraison gratuite à partir de 50€<br>
                        <i class="bi bi-shield-check"></i> Garantie 2 ans<br>
                        <i class="bi bi-arrow-return-left"></i> Retour gratuit sous 30 jours
                    </small>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-5">
        <div class="col-12">
            <ul class="nav nav-tabs" id="productTabs" role="tablist">
                <li class="nav-item" role="presentation">
                    <button class="nav-link active" id="description-tab" data-bs-toggle="tab" data-bs-target="#description" type="button">
                        Description détaillée
                    </button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link" id="specs-tab" data-bs-toggle="tab" data-bs-target="#specs" type="button">
                        Spécifications
                    </button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link" id="reviews-tab" data-bs-toggle="tab" data-bs-target="#reviews" type="button">
                        Avis clients
                    </button>
                </li>
            </ul>
            <div class="tab-content" id="productTabsContent">
                <div class="tab-pane fade show active" id="description" role="tabpanel">
                    <div class="p-4">
                        <p>{{ product.description ?: 'Description détaillée à venir...' }}</p>
                    </div>
                </div>
                <div class="tab-pane fade" id="specs" role="tabpanel">
                    <div class="p-4">
                        {% if product.specifications %}
                            {{ product.specifications|nl2br }}
                        {% else %}
                            <p>Spécifications techniques à venir...</p>
                        {% endif %}
                    </div>
                </div>
                <div class="tab-pane fade" id="reviews" role="tabpanel">
                    <div class="p-4">
                        {% if product.reviews|length > 0 %}
                            <div class="mb-4">
                                <h5>Note moyenne : 
                                    <span class="text-warning">
                                        {% for i in 1..5 %}
                                            <i class="bi bi-star{{ product.averageRating >= i ? '-fill' : (product.averageRating >= i-0.5 ? '-half' : '') }}"></i>
                                        {% endfor %}
                                    </span>
                                    {{ product.averageRating }}/5 ({{ product.reviews|length }} avis)
                                </h5>
                            </div>
                            
                            {% for review in product.reviews %}
                                <div class="card mb-3">
                                    <div class="card-body">
                                        <div class="d-flex justify-content-between align-items-start mb-2">
                                            <div>
                                                <strong>{{ review.user.firstName }} {{ review.user.lastName|slice(0,1) }}.</strong>
                                                <div class="text-warning">
                                                    {% for i in 1..5 %}
                                                        <i class="bi bi-star{{ review.rating >= i ? '-fill' : '' }}"></i>
                                                    {% endfor %}
                                                </div>
                                            </div>
                                            <small class="text-muted">{{ review.createdAt|date('d/m/Y') }}</small>
                                        </div>
                                        <p class="mb-0">{{ review.comment }}</p>
                                    </div>
                                </div>
                            {% endfor %}
                        {% else %}
                            <p>Aucun avis client pour le moment.</p>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
</div>

<script>
function changeMainImage(src, alt) {
    document.getElementById('mainImage').src = src;
    document.getElementById('mainImage').alt = alt;
}

document.addEventListener('DOMContentLoaded', function() {
    const quantityInput = document.getElementById('quantity');
    const decreaseBtn = document.getElementById('decreaseQty');
    const increaseBtn = document.getElementById('increaseQty');
    const addToCartBtn = document.getElementById('addToCart');

    decreaseBtn.addEventListener('click', function() {
        let qty = parseInt(quantityInput.value);
        if (qty > 1) {
            quantityInput.value = qty - 1;
        }
    });

    increaseBtn.addEventListener('click', function() {
        let qty = parseInt(quantityInput.value);
        let max = parseInt(quantityInput.max);
        if (qty < max) {
            quantityInput.value = qty + 1;
        }
    });

    addToCartBtn?.addEventListener('click', function() {
        const productId = this.dataset.productId;
        const quantity = quantityInput.value;
        
        fetch(`/cart/add/${productId}`, {
            method: 'POST',
            headers: {
                'Content-Type': 'application/x-www-form-urlencoded',
            },
            body: `quantity=${quantity}`
        })
        .then(response => {
            console.log('Response status:', response.status);
            return response.json();
        })
        .then(data => {
            console.log('Response data:', data);
            if (data.success) {
                // Mettre à jour le compteur du panier
                const cartCount = document.querySelector('.cart-count');
                if (cartCount) {
                    cartCount.textContent = data.cartCount;
                }
                
                // Afficher un message de succès
                const btn = this;
                const originalText = btn.innerHTML;
                btn.innerHTML = '<i class="bi bi-check"></i> Ajouté !';
                btn.classList.add('btn-success');
                
                setTimeout(() => {
                    btn.innerHTML = originalText;
                    btn.classList.remove('btn-success');
                }, 2000);
            } else {
                console.error('Erreur serveur:', data.message);
                alert('Erreur: ' + data.message);
            }
        })
        .catch(error => {
            console.error('Erreur réseau:', error);
            alert('Erreur de connexion');
        });
    });
});
</script>
{% endblock %}